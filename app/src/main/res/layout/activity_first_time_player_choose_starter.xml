<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities.introductionActivities.FirstTimePlayerChooseStarterActivity">

    <uk.co.ayaspace.pokefit.utils.Typewriter
        android:id="@+id/typewriter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/oddishImageButton"
        android:layout_width="221dp"
        android:layout_height="216dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pokemon_image_border"
        android:onClick="onStarterButtonPressed"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typewriter"
        app:srcCompat="@drawable/oddish" />

    <ImageButton
        android:id="@+id/poliwagImageButton"
        android:layout_width="221dp"
        android:layout_height="200dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/pokemon_image_border"
        android:onClick="onStarterButtonPressed"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oddishImageButton"
        app:srcCompat="@drawable/poliwag" />


    <ImageButton
        android:id="@+id/gastlyImageButton"
        android:layout_width="221dp"
        android:layout_height="216dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/pokemon_image_border"
        android:onClick="onStarterButtonPressed"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poliwagImageButton"
        app:srcCompat="@drawable/gastly" />

</androidx.constraintlayout.widget.ConstraintLayout>